{
  "name": "qhd-invoice-generator",
  "version": "3.0.2",
  "description": "Invoice and Packing List Generator for QHD Company",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --mac",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "invoice",
    "packing-list",
    "business",
    "electron"
  ],
  "author": {
    "name": "Xuan Zhang",
    "email": "xuan.zhang@qhdpv.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.qhdpv.invoice-generator",
    "productName": "QHD Invoice Generator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "icon-192.png",
      "icon-512.png",
      "icon.svg"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["ia32", "x64"]
        },
        {
          "target": "portable",
          "arch": ["ia32", "x64"]
        }
      ],
      "icon": "icon-512.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icon-512.png",
      "category": "public.app-category.business"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
