{
  "name": "qhd-invoice-generator-win7",
  "version": "2.2.0-win7",
  "description": "Invoice and Packing List Generator for QHD Company (Windows 7 Compatible)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win7": "electron-builder --win --config.electronVersion=22.3.27"
  },
  "keywords": [
    "invoice",
    "packing-list",
    "business",
    "electron",
    "windows7"
  ],
  "author": {
    "name": "Xuan Zhang",
    "email": "xuan.zhang@qhdpv.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.qhdpv.invoice-generator.win7",
    "productName": "QHD Invoice Generator Win7",
    "electronVersion": "22.3.27",
    "directories": {
      "output": "dist-win7"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "icon-192.png",
      "icon-512.png",
      "icon.svg"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["ia32", "x64"]
        },
        {
          "target": "portable",
          "arch": ["ia32", "x64"]
        }
      ],
      "icon": "icon-512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerHeaderIcon": "icon-512.png"
    }
  }
}
